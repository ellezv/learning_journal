{% extends "layout.jinja2" %}
{% block main %}
<main>
    <form method="POST">
    <input type="hidden" name="csrf_token" value="{{request.session.get_csrf_token() }}">
      <input class="input_post_title" type="text" value="{{post.title}}" name="title" required>
      <textarea class="text_area" rows="8" cols="40" name="body"required> 
      {{post.body}}
      </textarea>
      <button type="submit">Edit Post</button>
    </form>
</main>
{% endblock %}